generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  userID          Int      @id @default(autoincrement())
  firstName       String  
  lastName        String
  dob             String 
  userEmail       String
  gender          String 
  description     String?
  profilePicture  String?
  interest1       String?
  interest2       String?
  interest3       String?

}

model Comments {
  commentID   Int       @id
  content     String
  createdAt   DateTime  @default(now()) 
  //post        Posts?    @relation(fields: [postId], references: [postId])
  postId      Int?
}

model Post {
  postID  String @id
  userid  Users @relation(fields: [userID], references [id])
  content  String
  timeOfPost String
  //image String need to figure out how to implement this

}